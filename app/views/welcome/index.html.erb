<section class="section mg">
    <div class="container pd">
        <div class="search">
          <h2>Search for fun things to do!</h2>
          <div id="searchform">
            <%= form_with url: authenticated_root_path, method: :post do %>
              <%= label_tag(:term, "") %>
              <%= text_field_tag(:term) %>
              <%= label_tag(:location, "") %>
              <%= text_field_tag(:location) %>
              <%= submit_tag("Search") %>
            <% end %>
          </div>
          <!--  populate cards with data -->
          <section id="EventList">
            <% if @places.nil? %>
              <p></p>
            <% else %>
              <% @places.each do |place|%>
                <div class="event">
                  <div class="eventImg">
                    <img src=<%=place["image_url"] %> >
                  </div>
                  <div class="eventInfo">
                    <h2><%= place["name"] %></h2>
                    <p><%= place["address"] %></p>
                    <p>Rating: <%= place["rating"]%></p> 
                    <% if place["price"] != ""%>
                    <p>Price: <%= place["price"]%></p>
                    <% else %>
                    <p>Price: N/A</p>
                    <% end %>
                    <% if place["phone"] != ""%>
                    <p>T: <%= place["phone"]%></p>
                    <% else %>
                    <p>T: Unavailable</p>
                    <%end%>
                    <p><%= link_to "Yelp", place["url"], target: "_blank"%></p>
                  </div>
                  <form action="<%= events_path %>" method="POST"> 
                    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >                   
                    <input type="hidden" name="event[image_url]" value=<%= place["image_url"] %> >
                    <input type="hidden" name="event[name]" value= "<%= place["name"] %>" >
                    <input type="hidden" name="event[address]" value= "<%= place["location"]["address1"] %>" >
                    <input type="hidden" name="event[rating]" value= "<%= place["rating"] %>" >
                    <input type="hidden" name="event[price]" value= "<%= place["price"] %>" >
                    <input type="hidden" name="event[url]" value= "<%= place["url"] %>" >
                    <input type="hidden" name="event[phone]" value= "<%= place["phone"] %>" >
                    <input type="hidden" name="event[user_id]" value= "<%= current_user[:id] %>" >
                    <button id="add">Add Event</button>
                  </form>
                </div>
              <% end %>
            <% end %>
          </section>
        </div>
    </div>
    <div class="container pd">
        <h2>Event Explorer</h2>
        <section id="EventList">
        <% if @events.nil? %>
          <p>A blank canvas waiting for awesome date night ideas.</p>
        <% else %>
          <% @events.each do |event|%>
            <div class="event">
              <div class="eventImg">
                <img src=<%=event["image_url"] %> >
              </div>
              <div class="eventInfo">
                <h2><%= event["name"] %></h2>
                <p><%= event["address"] %></p>
                <p>Rating: <%= event["rating"]%></p> 
                <% if event["price"] != ""%>
                <p>Price: <%= event["price"]%></p>
                <% else %>
                <p>Price: N/A </p>
                <% end %>
                <% if event["phone"] != ""%>
                <p>T: <%= event["phone"]%></p>
                <% else %>
                <p>T: Unavailable</p>
                <%end%>
                <p><%= link_to "Yelp", event["url"], target: "_blank"%></p>
                <%= link_to "Delete", event_path(event.id), method: :delete %>
              </div>
            </div>
          <% end %>
        <% end %>
        </section>
    </div>
</section>